//////////////////ANA//////////////
#include<iostream>
#include<conio.h>
using namespace std;
int  Str_Length  (char *);
void Str_Concat  (char *, const char *);
void Str_Comp (char *, char*);
void  Str_Insert  (char *, char *);
int Str_Delete   (char *, char *);

int main(){
    int ch, num;
    char *str1, *str2;
    str1 = new(char);
    str2 = new(char);
    while(1){
        cout<<"\n STRING OPERATION PROGRAM";
        cout<<"\n ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ \n";
        cout<<"\n 1-> STRING LENGTH.";
        cout<<"\n 2-> STRING CONCATENATION.";
        cout<<"\n 3-> STRING COMPARISION.";
        cout<<"\n 4-> INSERT A SUB STRING.";
        cout<<"\n 5-> DELETE A SUB STRING.";
        cout<<"\n 6-> EXIT.";
        cout<<"\n\n ENTER YOUR CHOICE: ";
        cin>>ch;
        switch(ch){
            case 1:
                cout<<"\n ENTER A STRING: ";
                cin>>str1;
                cout<<"\n LENGTH OF THE STRING "<<str1<<" IS: "
                    <<Str_Length(str1);
                break;


            case 2:
                cout<<"\n ENTER 1ST STRING: ";
                cin>>str1;
                cout<<"\n ENTER 2ND STRING: ";
                cin>>str2;
                cout<<"\n CONCATE OF STRINGS: "<<str1<<" &" <<str2<< " IS: ";
                Str_Concat(str1, str2);
                cout<<str1;
                break;
            case 3:
                cout<<"\n ENTER 1ST STRING: ";
                cin>>str1;
                cout<<"\n ENTER 2ND STRING: ";
                cin>>str2;
                Str_Comp(str1,str2);
                break;
            case 4:
                cout<<"ENTER THE MAIN STRING:"<<endl;
                cin>>str1;
                cout<<"ENTER THE SUB STRING:"<<endl;
                cin>>str2;
                Str_Insert(str1,str2);
                break;
            case 5:
                cout<<"ENTER THE MAIN STRING:"<<endl;
                cin>>str1;
                cout<<"ENTER THE SUB STRING:"<<endl;
                cin>>str2;
                Str_Delete(str1,str2);
                break;
            default:
                delete(str1);
                delete(str2);
                exit(1);
            }
        getch();
        }
    }
int Str_Length(char *st){
    int len = 0;
    while(*(st+len) != '\0')
        len++;
    return len;
    }

void Str_Concat(char *st1, const char *st2){
    int i = 0, j = 0;
    while(*(st1+i) != '\0')
        i++;
    while(*(st2+j) != '\0'){
        *(st1+i) = *(st2+j);
        i++;
        j++;
        }
    *(st1+i) = '\0';
    }
void Str_Comp(char *st1, char *st2){
    int i=0, chk=0;
    while(st1[i]!='\0' || st2[i]!='\0')
    {
        if(st1[i]!=st2[i])
        {
            chk = 1;
            break;
        }
        i++;
    }
    if(chk==0)
        cout<<"\nSTRINGS ARE EQUAL";
    else
        cout<<"\nSTRINGS ARE NOT EQUAL";
    cout<<endl;
}


void Str_Insert(char *st1,char *st2){
    int n1, n2, x;
    n1 = Str_Length(st1);
    n2 = Str_Length(st2);
    cout<<"ENTER THE LOCATION TO ENTER THE SUB STRING:";
    cin>>x;
    for(int i=1;i<=(n1-x);i++){
        st1[n1+n2-i]=st1[n1-i];
    }
    st1[n1+n2]='\0';
    for(int j=0;j<n2;j++){
        st1[x+j]=st2[j];
    }
    cout<<st1;
}
int Str_Delete(char *st1,char *st2){
    int n1, n2;
    n1 = Str_Length(st1);
    n2 = Str_Length(st2);
    bool flag=false;
    int loc=-1;
    for (int i=0; i<=n1-n2;i++){
        for (int j=i;j<i+n2;j++){
            flag=true;
            if(st1[j]!=st2[j-i]){
                flag=false;
                break;
            }
        }
        if(flag==true){
            loc=i;
            break;
        }
    }
    if (loc==-1){
        cout<<"SUBSTRING NOT FOUND IN THE STRING";
        return 0;
    }
    for(int i=0;i<n1-loc;i++){
        st1[loc+i]=st1[loc+n2+i];
    }
    cout<<st1;

}
