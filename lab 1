#include <iostream>
#include <string>
using namespace std;
using namespace std;
int length  (char *);
int deletion   (char *, char *);
int main() 
{
     char str1[50], str2[50] ,str3[50] ;
     char *str11, *str22;
     str11 = new(char);
     str22 = new(char);
     int i=0,j=0,choice,size,size2,pos,s,o,x,t;    
     cout << "\nEnter the operation to be performed : ";
     cout << "\n1 . String Length ";
     cout << "\n2 . String Concatenation ";
     cout << "\n3 . String Comparison ";
     cout << "\n4 . Sub String Insertion ";
     cout << "\n5 . Sub String Deletion "<<endl;
     cin >> choice;
     switch(choice)
     {
         case 1:
         {
             cout<<"Enter string : ";
             cin>>str1;
             i=0, size=0;   
             while(str1[i]!='\0') 
             {
                 size++;        
                 i++;            
             }
             cout<<"String length is : "<<size;
             break;
         }
         case 2:
         {
             cout<<"Enter first string : ";
             cin>>str1;
             cout<<"Enter second string : ";
             cin>>str2;
             while(str1[i]!='\0')
             i++;
             while(str2[j]!='\0')
             {
                 str1[i]=str2[j];
                 j++;
                 i++;
             }
             str1[i]='\0';
             cout<<"Concatenated String is : "<<str1;
             break;
         }
         case 3:
         {
             cout<<"Enter first string : ";
             cin>>str1;
             cout<<"Enter second string : ";
             cin>>str2;
             if (str1 == str2) 
             cout <<"Strings are equal"<<endl; 
             else
             cout <<"Strings are not equal"<<endl; 
             break;
         }
         case 4:
         {
             cout<<"\nEnter first string : ";
             cin>>str1;
             i=0, size=0;   
             while(str1[i]!='\0') 
             {
                 size++;        
                 i++;            
             }
             cout<<"\nEnter second string : ";
             cin>>str2;
             i=0, size2=0;   
             while(str2[i]!='\0') 
             {
                 size2++;        
                 i++;            
             }
             cout<<"\nEnter the position to insert to : ";
             cin>>pos;
             i=0;
             while(i <= size)
             {
             str3[i]=str1[i];
             i++;
             }
             s = size2+size;
             o = pos+size;
             for(i=pos;i<s;i++)
             {
                 x = str3[i];
                 if(t<size2)
                     {
                     str1[i] = str2[t];
                     t=t+1;
                     }
                 str1[o]=x;
                 o=o+1;
             }
             cout<<"\nThe new string is : "<<str1;
             break;
         }
         case 5:
         {
             cout<<"\nEnter first string : ";
             cin>>str11;
             cout<<"\nEnter the sub string : ";
             cin>>str22;
             deletion(str1,str2);
             break;
         }
         default:
         {
         cout << "\nInvalid Selection";
         }
     }
    return 0;
}
int length(char *st)
{
    int len = 0;
    while(*(st+len) != '\0')
        len++;
    return len;
}
int deletion(char *st1,char *st2)
{
    int n1, n2;
    n1 = length(st1);
    n2 = length(st2);
    bool flag=false;
    int loc=-1;
    for (int i=0; i<=n1-n2;i++)
    {
        for (int j=i;j<i+n2;j++)
        {
            flag=true;
            if(st1[j]!=st2[j-i])
            {
                flag=false;
                break;
            }
        }
        if(flag==true)
        {
            loc=i;
            break;
        }
    }
    if (loc==-1){
        cout<<"Entered substring is not present in the string";
        return 0;
    }
    for(int i=0;i<n1-loc;i++){
        st1[loc+i]=st1[loc+n2+i];
    }
    cout<<st1;
}
