//OPERATIONS


#include <iostream>
#include <string>
using namespace std;

int main() {
     char str1[50], str2[50] ,str3[50];
     string st1,st2;
     int i=0,j=0,choice,size,size2,pos,s,o,x,t;    
     cout << "\nEnter the operation to be performed : ";
     cout << "\n1 . String Length ";
     cout << "\n2 . String Concatenation ";
     cout << "\n3 . String Comparison ";
     cout << "\n4 . Sub String Insertion ";
     cout << "\n5 . Sub String Deletion "<<endl;
     cin >> choice;
     switch(choice)
     {
         case 1:
         {
             cout<<"Enter string : ";
             cin>>str1;
             i=0, size=0;   
             while(str1[i]!='\0') 
             {
                 size++;        
                 i++;            
             }
             cout<<"String length is : "<<size;
             break;
         }
         case 2:
         {
             cout<<"Enter first string : ";
             cin>>str1;
             cout<<"Enter second string : ";
             cin>>str2;
             while(str1[i]!='\0')
             i++;
             while(str2[j]!='\0')
             {
                 str1[i]=str2[j];
                 j++;
                 i++;
             }
             str1[i]='\0';
             cout<<"Concatenated String is : "<<str1;
             break;
         }
         case 3:
         {
             cout<<"Enter first string : ";
             cin>>st1;
             cout<<"Enter second string : ";
             cin>>st2;
             if (st1 == st2) 
             cout <<"Strings are equal"<<endl; 
             else
             cout <<"Strings are not equal"<<endl; 
             break;
         }
         case 4:
         {
             cout<<"\nEnter first string : ";
             cin>>str1;
             i=0, size=0;   
             while(str1[i]!='\0') 
             {
                 size++;        
                 i++;            
             }
             cout<<"\nEnter second string : ";
             cin>>str2;
             i=0, size2=0;   
             while(str2[i]!='\0') 
             {
                 size2++;        
                 i++;            
             }
             cout<<"\nEnter the position to insert to : ";
             cin>>pos;
             i=0;
             while(i <= size)
             {
             str3[i]=str1[i];
             i++;
             }
             s = size2+size;
             o = pos+size;
             for(i=pos;i<s;i++)
             {
                 x = str3[i];
                 if(t<size2)
                     {
                     str1[i] = str2[t];
                     t=t+1;
                     }
                 str1[o]=x;
                 o=o+1;
             }
             cout<<"\nThe new string is : "<<str1;
             break;
         }
         default:
         {
         cout << "\nInvalid Selection";
         }
     }
    return 0;
}



